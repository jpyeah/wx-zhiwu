.post-container{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border-bottom: 1px solid #5ec3b1;
    border-top:1px solid #5ec3b1;
    padding-bottom: 5px;
}

.post-author-date{
    margin: 10rpx 0 20rpx 10rpx;  
}

.post-author{
    width:60rpx;
    height: 60rpx;
    vertical-align: middle;
}

.post-date{
    margin-left:20rpx;
    vertical-align: middle; 
    font-size: 26rpx;
    margin-bottom: 5px;
}

.post-title{
    font-size: 34rpx;
    font-weight: 600;
    color:#333;
    margin-bottom: 10px;
    margin-left: 10px;
}

.post-image{
    width:100%;
    height: 340rpx;
    margin-bottom: 15rpx;
}

.post-content{
    color: #666;
    font-size: 28rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
    margin:0 10rpx 20rpx 20rpx;
}

.post-like{
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
}

.post-like-image{
    height: 16px;
    width: 16px;
    vertical-align: middle;
    margin-right: 8px;
}

.post-like-font{
    margin-right: 20px;
    vertical-align: middle;
}